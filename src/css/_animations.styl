.order-enter
  transform: translateX(-120%)
  transition 1s
  max-height 0px
  padding 0 !important
  &.order-enter-active
    max-height 60px
    transform: translateX(0) 
    padding 2rem 0 !important

.order-exit
  padding 0
  transition 1s
  transform: translateX(0)
  &.order-exit-active
    background lightgrey
    transform: translateX(120%)
    

.count-enter
  background red
  transition 2s
  transform translateY(100%)
  &.count-enter-active
    background: yellow
    transform translateY(0)

.count-exit
  background pink
  transition 2s
  transform translateY(0)
  position absolute
  left 0
  bottom 0
  &.count-exit-active
    background pink
    transform translateY(-100%)

 